/* pages/Recycle/recycle.wxss */
.recycle {
  position: relative;
}

.recycle-map {
  width: 100%;
  float: left;
}

.recycle-item {
  flex-direction: column;
  position: absolute;
  background-color: #043559;
  color: white;
  width: 100%;
  z-index: 99;
}

.recycle-item .picture {
  width: 100%;
  max-height: 80%;
}

.recycle .content {
  margin-left: 10px;
}

.recycle .content.hours {
  font-size: small;
}