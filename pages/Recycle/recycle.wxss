/* pages/Recycle/recycle.wxss */
.recycle {
  position: relative;
}

.recycle-map {
  width: 100%;
  float: left;
}

.recycle-item {
  flex-direction: column;
  position: absolute;
  color: white;
  width: 100%;
}

.recycle-item .picture {
  width: 100%;
  height: 100%;
}

.recycle-item .content {
  background-color: #043559;
  position: absolute;
  bottom: 20px;
  padding-left: 10px;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.recycle-item .content .hours {
  font-size: small;
}

.recycle-item .detail {
  position: absolute;
  bottom: 20px;
  right: 0;
  width: 44px;
  height: 44px;
  text-align: center;
}

.recycle-item .detail image {
  width: 24px;
  height: 24px;
  margin: 10px auto;
}